<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
      integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="icon" href="/img/news.svg" />
    <script src="/js/script.js" defer></script>
    <title>Newzy</title>
  </head>
  <body>
    <form method="post">
      <h3>newz</h3>
      <input type="text" placeholder="search" name="search" />
      <button><i class="fab fa-searchengin"></i></button>
    </form>
    <section class="wrapper">
      <% articles.forEach(article => { %>
      <a href="<%- article.url %>" class="news-card" target="_blank">
        <img src="<%- article.urlToImage %>" alt="<%- article.title %>" />
        <h2 class="title"><%- article.title %></h2>
        <p class="content"><%- article.description %></p>
      </a>
      <% }) %>
    </section>
    <footer>
      <p class="copyright">All the rights are reserved by NEWZY ðŸ˜ƒ</p>
    </footer>
  </body>
</html>
